<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record model="ir.ui.view" id="apartment_form_view">
        <field name="name">apartment.form</field>
        <field name="model">apartment.sell</field>
        <field name="arch" type="xml">
            <form string="Apartment Form">
                <sheet>
                    <group>
                        <group>
                            <field name="name" class="bg-primary" />
                            <field name="description" string="Description" />
                            <field name="image" string="Image" />
                            <field name="availability" string="Availability" />
                            <field name="price" string="Price" />
                        </group>
                        <group>
                            <field name="apartment_surface" string="Apartment surface" />
                            <field name="terrace_surface" string="Terrace surface" />
                            <field name="total_surface" string="Total surface" />
                            <field name="best_offerer" string="Best offerer" />
                            <field name="best_price_offer" string="Best price offerer" />
                            <field name="idProduct" string="Product"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <record model="ir.ui.view" id="apartment_tree_view">
        <field name="name">apartment.tree</field>
        <field name="model">apartment.sell</field>
        <field name="arch" type="xml">
            <tree string="To-do Task">
                <field name="name" class="bg-primary" />
                <field name="price" string="Price" />
                <field name="best_offerer" string="Best offerer" />
            </tree>
        </field>
    </record>
